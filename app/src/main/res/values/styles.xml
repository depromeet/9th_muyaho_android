<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.Muyaho" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Muyaho" parent="Base.Theme.Muyaho"/>

    <style name="Theme.Muyaho.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LaunchSplashTheme" parent="Theme.Muyaho.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="TextTitle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">28dp</item>
        <item name="android:textColor">#FF3C3C3C</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>