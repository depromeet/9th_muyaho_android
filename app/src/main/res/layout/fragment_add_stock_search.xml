<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_stock_search_stock"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="47dp"
            style="@style/TextBody1"/>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_cancel_white_24"
            android:scaleType="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="33dp"
            android:layout_marginRight="8dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_search"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="102dp"
            android:layout_marginRight="20dp">

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_bg_stroke_radius_10dp"
                android:drawableLeft="@drawable/ic_search_gray_24"
                android:drawableTint="@color/primary_blue_fade"
                android:paddingLeft="16dp"
                android:drawablePadding="8dp"
                android:hint="@string/add_stock_search_edit_text_hint"
                android:textColorHint="@color/black_5"
                android:inputType="text"
                android:maxLines="1"
                android:imeOptions="actionSearch"
                style="@style/TextBody2"/>
            
            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_btn_delete_16"
                android:scaleType="center"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="8dp" />
            
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_search_result"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/cl_search"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>