<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_back_white_24"
                android:scaleType="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="34dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_youngcha_logo"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="50dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="98dp">

                <ImageView
                    android:id="@+id/iv_youngchan"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="375:360"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/share_future_budget"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_youngchan"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="24dp"
                    style="@style/TextBody1"
                    android:textColor="@color/white_2"/>

                <TextView
                    android:id="@+id/tv_future_budget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_youngchan"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="52dp"
                    style="@style/TextH1"
                    android:textColor="@color/white_2"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/ch_benefit_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_youngchan"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="122dp"
                    style="@style/TextCaption1.Bold"
                    android:textColor="@color/white_2"
                    app:chipBackgroundColor="@color/primary_blue_dark"
                    app:chipMinTouchTargetSize="0dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    app:layout_constraintTop_toBottomOf="@id/ch_benefit_rate"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.slider.Slider
                android:id="@+id/slider_benefit_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cl_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:valueFrom="0"
                android:valueTo="1000"
                android:stepSize="10"
                app:trackHeight="5dp"
                app:trackColorActive="@color/white_2"
                app:trackColorInactive="@color/white_4"
                app:thumbColor="@color/white_2"
                app:tickVisible="false"/>

            <TextView
                android:id="@+id/tv_save_image"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="@string/share_save_image"
                app:layout_constraintTop_toBottomOf="@id/cl_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="60dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_bg_fill_radius_8dp"
                android:backgroundTint="@color/white_2"
                style="@style/TextBody2.Bold"
                android:textColor="@color/primary_blue"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="63dp"
                app:layout_constraintTop_toBottomOf="@id/tv_save_image"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>