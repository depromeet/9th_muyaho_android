<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/shape_bg_fill_radius_14dp"
        android:backgroundTint="@color/white_1"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tv_stock_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="14dp"
            style="@style/TextSubtitle2" />

        <TextView
            android:id="@+id/tv_benefit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_blue_dark"
            app:layout_constraintTop_toTopOf="@id/tv_stock_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_stock_name"
            android:layout_marginRight="16dp"
            style="@style/TextCaption1"/>

        <ImageView
            android:id="@+id/iv_up_down"
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:layout_constraintTop_toTopOf="@id/tv_benefit"
            app:layout_constraintRight_toRightOf="@id/tv_benefit"
            app:layout_constraintBottom_toBottomOf="@id/tv_benefit"
            android:layout_marginRight="2dp"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            style="@style/TextSubtitle1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>