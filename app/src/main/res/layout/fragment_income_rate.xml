<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/black_1">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="37dp"
            android:text="미래의 수익금을\n예상해보세요!"
            android:textAppearance="@style/TextH2"
            android:textColor="@color/white_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/img_income_rate_illustration"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp"
            android:text="현재 보유"
            android:textAppearance="@style/TextBody1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_holding_price"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/shape_bg_radius_10dp"
            android:backgroundTint="@color/black_3"
            android:hint="보유 평단가 (원)"
            android:paddingHorizontal="12dp"
            android:textAppearance="@style/TextCaption1"
            android:textColorHint="@color/gray_40"
            app:layout_constraintEnd_toStartOf="@id/et_holding_count"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_subtitle" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_holding_count"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/shape_bg_radius_10dp"
            android:backgroundTint="@color/black_3"
            android:hint="보유 수량 (원)"
            android:paddingHorizontal="12dp"
            android:textAppearance="@style/TextCaption1"
            android:textColor="@color/white_2"
            android:textColorHint="@color/gray_40"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/et_holding_price"
            app:layout_constraintTop_toBottomOf="@id/tv_subtitle" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_purchase_amount"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/shape_bg_radius_10dp"
            android:backgroundTint="@color/black_2"
            android:hint="매입 금액 (원)"
            android:paddingHorizontal="12dp"
            android:textAppearance="@style/TextCaption1"
            android:textColor="@color/white_2"
            android:textColorHint="@color/gray_40"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_holding_count" />

        <TextView
            android:id="@+id/tv_target_income_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="34dp"
            android:text="내 목표 수익률은?"
            android:textAppearance="@style/TextBody1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_purchase_amount" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="+1000%까지 입력 가능해요"
            android:textAppearance="@style/TextCaption1"
            android:textColor="@color/secondary_red"
            app:layout_constraintBottom_toBottomOf="@id/tv_target_income_rate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_target_income_rate" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_target_income_rate"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/shape_bg_radius_10dp"
            android:backgroundTint="@color/black_2"
            android:hint="목표 수익률 (%)"
            android:paddingHorizontal="12dp"
            android:textAppearance="@style/TextCaption1"
            android:textColor="@color/white_2"
            android:textColorHint="@color/gray_40"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_target_income_rate" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape_bg_radius_8dp"
            android:backgroundTint="#2d247d"
            android:gravity="center"
            android:text="공유하기"
            android:textAppearance="@style/TextBody2.Bold"
            android:textColor="@color/gray_20"
            app:layout_constraintTop_toBottomOf="@id/et_target_income_rate" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
