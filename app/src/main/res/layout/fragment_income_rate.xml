<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.depromeet.muyaho.ui.calc.IncomeRateViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/black_1">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="37dp"
            android:text="@string/income_rate_title"
            android:textAppearance="@style/TextSubtitle1"
            android:textColor="@color/white_1"
            app:goneIf="@{vm.visiblePredictView}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/img_income_rate_illustration"
            android:elevation="16dp"
            app:goneIf="@{vm.visiblePredictView}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_predict"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/img_youngchan_default_130"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibleIf="@{vm.visiblePredictView}" />

        <TextView
            android:id="@+id/tv_future_income_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="20dp"
            android:text="미래의 수익금은"
            android:textAppearance="@style/TextBody2"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibleIf="@{vm.visiblePredictView}" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:text="@{vm.predictAmount}"
            android:textAppearance="@style/TextH2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_future_income_rate"
            app:visibleIf="@{vm.visiblePredictView}"
            tools:text="56,680,000,000" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="28dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/shape_bg_radius_20dp"
            android:backgroundTint="@color/secondary_red"
            android:gravity="center"
            android:text="@{@string/plus_percent(vm.targetIncomeRate)}"
            android:textAppearance="@style/TextCaption1.Bold"
            android:textColor="@color/secondary_red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_amount"
            app:visibleIf="@{vm.visiblePredictView}"
            tools:text="+8.35%" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="180dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="34dp"
                    android:text="@string/income_rate_current_holding"
                    android:textAppearance="@style/TextBody1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_holding_price"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/shape_bg_radius_10dp"
                    android:backgroundTint="@color/black_3"
                    android:hint="@string/income_rate_holding_price"
                    android:inputType="numberDecimal"
                    android:maxLength="8"
                    android:paddingHorizontal="12dp"
                    android:text="@={vm.holdingPrice}"
                    android:textAppearance="@style/TextCaption1"
                    android:textColor="@color/white_2"
                    android:textColorHint="@color/gray_40"
                    app:layout_constraintEnd_toStartOf="@id/et_holding_count"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_subtitle" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_holding_count"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/shape_bg_radius_10dp"
                    android:backgroundTint="@color/black_3"
                    android:hint="@string/income_rate_holding_count"
                    android:inputType="numberDecimal"
                    android:maxLength="8"
                    android:paddingHorizontal="12dp"
                    android:text="@={vm.holdingCount}"
                    android:textAppearance="@style/TextCaption1"
                    android:textColor="@color/white_2"
                    android:textColorHint="@color/gray_40"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/et_holding_price"
                    app:layout_constraintTop_toBottomOf="@id/tv_subtitle" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_purchase_amount"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/shape_bg_radius_10dp"
                    android:backgroundTint="@color/black_2"
                    android:enabled="false"
                    android:gravity="center_vertical"
                    android:hint="@string/income_rate_purchase_amount"
                    android:inputType="numberDecimal"
                    android:paddingHorizontal="12dp"
                    android:text="@{vm.purchaseAmount}"
                    android:textAppearance="@style/TextCaption1"
                    android:textColor="@color/white_2"
                    android:textColorHint="@color/gray_40"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_holding_count" />

                <TextView
                    android:id="@+id/tv_target_income_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="34dp"
                    android:text="@string/income_rate_target_income_rate"
                    android:textAppearance="@style/TextBody1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_purchase_amount" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="@string/income_rate_desc"
                    android:textAppearance="@style/TextCaption1"
                    android:textColor="@color/secondary_red"
                    app:layout_constraintBottom_toBottomOf="@id/tv_target_income_rate"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_target_income_rate" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_target_income_rate"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/shape_bg_radius_10dp"
                    android:backgroundTint="@color/black_2"
                    android:hint="@string/income_rate_target_income_rate_percent"
                    android:inputType="numberDecimal"
                    android:maxLength="4"
                    android:paddingHorizontal="12dp"
                    android:text="@={vm.targetIncomeRate}"
                    android:textAppearance="@style/TextCaption1"
                    android:textColor="@color/white_2"
                    android:textColorHint="@color/gray_40"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_target_income_rate" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/shape_bg_radius_8dp"
                    android:backgroundTint="#2d247d"
                    android:gravity="center"
                    android:text="@string/income_rate_share"
                    android:textAppearance="@style/TextBody2.Bold"
                    android:textColor="@color/gray_20"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_target_income_rate" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
