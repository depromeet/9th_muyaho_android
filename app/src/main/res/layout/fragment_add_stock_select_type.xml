<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.depromeet.muyaho.ui.addstock.AddStockSelectTypeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_stock_add_new_item"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="47dp"
            style="@style/TextBody1"/>

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_cancel_white_24"
            android:scaleType="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="33dp"
            android:layout_marginRight="8dp"
            android:onClick="@{() -> vm.onCloseBtnClick()}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_stock_inform_new_item"
            android:lineSpacingExtra="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="106dp"
            style="@style/TextSubtitle1"/>

        <RadioGroup
            android:id="@+id/rg_stock_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:setCheckChangeListener="@{vm.stockTypeCheckChangeListener}">

            <RadioButton
                android:id="@+id/rb_domestic_stock"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:background="@drawable/shape_bg_stroke_radius_10dp_selector"
                android:text="@string/add_stock_domestic_stock"
                android:checked="true"
                style="@style/TextBody2"/>

            <RadioButton
                android:id="@+id/rb_overseas_stock"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:background="@drawable/shape_bg_stroke_radius_10dp_selector"
                android:text="@string/add_stock_overseas_stock"
                style="@style/TextBody2"
                android:layout_marginLeft="14dp"/>

            <RadioButton
                android:id="@+id/rb_virtual_currency"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:background="@drawable/shape_bg_stroke_radius_10dp_selector"
                android:text="@string/add_stock_virtual_currency"
                style="@style/TextBody2"
                android:layout_marginLeft="14dp"/>

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stock_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="270dp"
            style="@style/TextCaption1"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_search"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="298dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:onClick="@{() -> vm.onSearchBtnClick()}">

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search_gray_24"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_stock_search_stock_name"
                android:textStyle="normal"
                android:textColor="@color/black_5"
                app:layout_constraintLeft_toRightOf="@id/iv_search"
                app:layout_constraintTop_toTopOf="@id/iv_search"
                app:layout_constraintBottom_toBottomOf="@id/iv_search"
                android:layout_marginLeft="8dp"
                style="@style/TextBody1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_5"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>